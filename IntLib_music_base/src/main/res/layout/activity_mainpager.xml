<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/view_song_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/view_music_player"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_song_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="노래 이름"
                    android:textColor="#000000"
                    android:textSize="24sp"/>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/song_woman_background"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_singer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="23sp"/>

                <View
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:background="#a1a1a1"/>

                <TextView
                    android:id="@+id/text_song_maker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="#676567"
                    android:textSize="15sp"/>

            </LinearLayout>


        </LinearLayout>

        <ScrollView
            android:id="@+id/view_lyric"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="112dp"
            android:background="@drawable/song_lyrics_background"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/tt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="24dp">

                <TextView
                    android:id="@+id/text_song_name_lyric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="34dp"
                    android:text="song name"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/song_lyric_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:lineSpacingExtra="10dp"
                    android:text="Description"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"/>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/view_song_list"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="112dp"
            android:background="@drawable/song_button_playlist_playlistbackground"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/song_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:text="DISK 1"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <ListView
                android:id="@+id/list_song"
                android:layout_width="150dp"
                android:layout_height="270dp"
                android:layout_marginTop="20dp"
                android:divider="@null"
                android:paddingLeft="30dp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/view_music_player"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/song_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_song_list"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginRight="32dp"
                    android:layout_weight="1"
                    android:src="@drawable/song_button_playlist_disk1"/>

                <ImageView
                    android:id="@+id/song_button_prev"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/song_button_prev"/>

                <View
                    android:layout_width="108dp"
                    android:layout_height="48dp"
                    android:id="@+id/view"/>

                <ImageView
                    android:id="@+id/song_button_next"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/song_button_next"/>

                <ImageView
                    android:id="@+id/view_song_lyric"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_marginLeft="32dp"
                    android:layout_weight="1"
                    android:src="@drawable/song_button_lyrics"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/timerDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">
                    <!-- Current Duration Label -->
                    <TextView
                        android:id="@+id/songCurrentDurationLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:textColor="#eeeeee"
                        android:textStyle="bold"/>
                    <!-- Total Duration Label -->
                    <TextView
                        android:id="@+id/songTotalDurationLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:textColor="#eeeeee"
                        android:textStyle="bold"/>
                </LinearLayout>

                <SeekBar
                    android:id="@+id/songProgressBar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:thumb="@drawable/seekbar_head"
                    android:thumbOffset="0dp"/>

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/button_play_song"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@id/view_music_player"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-60dp"
            android:scaleType="fitXY"
            android:src="@drawable/song_play_button"/>
    </RelativeLayout>

</RelativeLayout>