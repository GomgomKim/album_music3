<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="0dp"
        android:layout_marginLeft="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="40"
        android:layout_gravity="left|center_vertical"
        android:src="@drawable/gallery_icon"

        />
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="70"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"

        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"

        android:gravity="center_horizontal"
        android:text="Mobile Music"
        />

    <TextView
        android:id="@+id/song_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"

        android:gravity="center_horizontal"
        android:textSize="10sp"
        android:text="Mobile Music"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="60"
        android:layout_marginLeft="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"

            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView


                android:id="@+id/song_button_prev"


                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/song_button_prev"
                />


            <ImageView
                android:id="@+id/notif_icon"
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/song_pause_button"
                />

            <ImageView


                android:id="@+id/song_button_next"
                android:layout_marginLeft="10dp"

                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/song_button_next"
                />

        </LinearLayout>



    </LinearLayout>


    <ImageView


        android:id="@+id/end"


        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_width="0dp"
        android:layout_weight="10"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:scaleType="centerCrop"
        android:src="@drawable/button_x"
        />

</LinearLayout>
